@model IEnumerable<OnCall_Staffing.Models.Posting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Job Postings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalInstructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalInstructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.StreetAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostingID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="row">
    <div class="col-md-6">
        <div id="map" style="height:400px; width:600px;"></div>
        <script>
            var map;
            function intialize() {
                var point = { lat: 39.9947, lng: 83.0172 };
                var center = new google.maps.LatLng(39.953131, -82.981683);
                map = new google.maps.Map(document.getElementById('map'), {
                    center: center,
                    zoom: 12
                });

                var marker = new google.maps.Marker({
                    position: point,
                    map: map,
                    title: 'Grant Medical Center',
                    label: "My fave hosp"
                });
            }

        </script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDfpykUtTJY3NYAdxY5S6EDd7WayxV1vMM"></script>
        <script src="~/js/maps.js"></script>
    </div>
</div>
